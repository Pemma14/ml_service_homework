# Параметры приложения (App)
APP__NAME="ML Service API"
APP__DESCRIPTION="Сервис для выполнения предсказаний на основе моделей машинного обучения"
APP__VERSION="0.1.0"
APP__HOST=0.0.0.0
APP__PORT=8000
APP__DEBUG=True
APP__MODE=DEV
APP__MAX_REPLENISH_AMOUNT=50000.0

# Параметры базы данных (Database)
DB__HOST=database
DB__PORT=5432
DB__NAME=ml_service
DB__USER=pema
DB__PASSWORD=password
DB__ECHO=True
DB__POOL_PRE_PING=True
DB__POOL_SIZE=5
DB__MAX_OVERFLOW=10
DB__POOL_RECYCLE=3600

# Параметры аутентификации (Auth)
AUTH__SECRET_KEY=your_secret_key_here
AUTH__ALGORITHM=HS256
AUTH__ACCESS_TOKEN_EXPIRE_MINUTES=30
AUTH__COOKIE_NAME=ml_service_session
AUTH__SECURE_COOKIE=True

# Параметры начальной загрузки (Seed Data)
SEED__ADMIN_EMAIL=admin@example.org
SEED__ADMIN_PASSWORD=password
SEED__DEMO_EMAIL=demo@example.org
SEED__DEMO_PASSWORD=password

# Настройки логирования (Logging)
LOGGING__LEVEL=INFO
LOGGING__FORMAT=JSON

# Настройки CORS
CORS__ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Специфические настройки воркеров (Worker)
WORKER__MAX_TASKS_PER_CHILD=100
WORKER__PREFETCH_COUNT=1
WORKER__MAX_RETRIES=3
WORKER__RETRY_DELAY=1.0

# Параметры для брокера сообщений (RabbitMQ)
MQ__HOST=rabbitmq
MQ__PORT=5672
MQ__VIRTUAL_HOST=/
MQ__USER=guest
MQ__PASSWORD=guest
MQ__QUEUE_NAME=ml_task_queue
MQ__ERL_ARGS="-rabbit disk_free_limit 2147483648"

# Параметры Телеграм-бота (Bot)
BOT__TOKEN=your_bot_token_here
BOT__API_URL=http://app:8000
